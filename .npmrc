# NPM Configuration for CodexHUB Cursor Integration
# This file configures npm/pnpm behavior for the Cursor integration system

# Enable strict peer dependencies
strict-peer-dependencies=false

# Enable hoisting for better performance
hoist=true

# Enable shamefully-hoist for Python dependencies
shamefully-hoist=true

# Enable auto-install-peers
auto-install-peers=true

# Enable dedupe
dedupe=true

# Enable store-dir for better caching
store-dir=.pnpm-store

# Enable cache-dir for better performance
cache-dir=node_modules/.cache

# Enable prefer-offline for better performance
prefer-offline=true

# Enable fetch-retries for better reliability
fetch-retries=3

# Enable fetch-retry-factor for better reliability
fetch-retry-factor=2

# Enable fetch-retry-mintimeout for better reliability
fetch-retry-mintimeout=10000

# Enable fetch-retry-maxtimeout for better reliability
fetch-retry-maxtimeout=60000

# Enable fetch-timeout for better reliability
fetch-timeout=300000

