{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Drift Detection Configuration",
  "type": "object",
  "required": ["window_size", "min_samples", "metrics"],
  "properties": {
    "window_size": {
      "type": "integer",
      "minimum": 1
    },
    "min_samples": {
      "type": "integer",
      "minimum": 1
    },
    "metrics": {
      "type": "object",
      "minProperties": 1,
      "additionalProperties": {
        "type": "object",
        "required": [
          "reference_values",
          "psi_threshold",
          "ks_threshold",
          "kl_threshold"
        ],
        "properties": {
          "unit": {
            "type": "string"
          },
          "psi_threshold": {
            "type": "number",
            "minimum": 0
          },
          "ks_threshold": {
            "type": "number",
            "minimum": 0
          },
          "kl_threshold": {
            "type": "number",
            "minimum": 0
          },
          "reference_values": {
            "type": "array",
            "minItems": 5,
            "items": {
              "type": "number"
            }
          },
          "bins": {
            "type": "array",
            "minItems": 2,
            "items": {
              "type": "number"
            }
          }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}
