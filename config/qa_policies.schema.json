{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "QA Policies Schema",
  "type": "object",
  "additionalProperties": {
    "type": "object",
    "properties": {
      "threshold": { "type": "number" },
      "min_ratio": { "type": "number" },
      "max_vulns": { "type": "number" },
      "confidence": {
        "type": "number",
        "minimum": 0,
        "maximum": 1
      }
    },
    "required": ["confidence"],
    "additionalProperties": false
  }
}
