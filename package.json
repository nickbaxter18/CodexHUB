{
  "name": "codexbuilder",
  "version": "1.0.0",
  "description": "GPT-powered coding assistant with a clean, enterprise-grade Node.js scaffold.",
  "keywords": [
    "openai",
    "codex",
    "gpt",
    "cli",
    "nodejs"
  ],
  "homepage": "https://github.com/nickbaxter18/CodexHUB#readme",
  "bugs": {
    "url": "https://github.com/nickbaxter18/CodexHUB/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nickbaxter18/CodexHUB.git"
  },
  "license": "MIT",
  "author": "Nick",
  "type": "module",
  "main": "src/index.js",
  "bin": {
    "ask": "scripts/ask.js"
  },
  "directories": {
    "doc": "docs",
    "test": "test"
  },
  "scripts": {
    "audit:js": "pnpm audit --audit-level=high",
    "audit:py": "python -m pip_audit",
    "check-format": "prettier --check \"**/*.{js,ts,tsx,json,md,yaml,yml,css,scss}\"",
    "codexbridge:plans": "node codexbridge/src/plan-watcher.js",
    "commitlint": "commitlint",
    "coverage": "c8 node --test tests/codexbridge/codexrc-loader.test.js tests/codexbridge/json-schema-validator.test.js tests/codexbridge/plan-validator.test.js tests/macros/registry-integrity.test.js",
    "dev": "node src/index.js",
    "editor:codex": "node editor/codex-editor.js",
    "format": "prettier --write \"**/*.{js,ts,tsx,json,md,yaml,yml,css,scss}\"",
    "lint": "eslint .",
    "lint-staged": "lint-staged",
    "lint:css": "stylelint \"**/*.{css,scss}\"",
    "lint:css:fix": "stylelint \"**/*.{css,scss}\" --fix",
    "lint:editorconfig": "editorconfig-checker",
    "lint:fix": "eslint . --fix",
    "lint:md": "markdownlint \"**/*.md\"",
    "lint:yaml": "python -m yamllint .",
    "prepare": "husky install",
    "release": "semantic-release",
    "spellcheck": "cspell \"**/*.{js,ts,tsx,py,md}\"",
    "test": "node --test tests",
    "test:watch": "vitest watch",
    "typecheck": "tsc --noEmit",
    "cursor:setup": "python scripts/setup_cursor_integration.py",
    "cursor:start": "python scripts/start_cursor_integration.py",
    "cursor:validate": "python scripts/validate_cursor_integration.py",
    "cursor:test": "python scripts/test_cursor_integration.py",
    "cursor:enforce": "python scripts/enforce_cursor_usage.py",
    "cursor:auto": "python scripts/auto_setup_cursor.py",
    "cursor:bootstrap": "python scripts/bootstrap_integration.py",
    "cursor:knowledge": "python scripts/bootstrap_knowledge.py",
    "cursor:integration": "python scripts/bootstrap_cursor_integration.py"
  },
  "dependencies": {
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1",
    "child_process": "^1.0.2",
    "dotenv": "^17.2.2",
    "express": "^5.1.0",
    "fs": "^0.0.1-security",
    "multer": "^2.0.2",
    "openai": "^5.22.0",
    "path": "^0.12.7"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.5.0",
    "@commitlint/config-conventional": "^19.5.0",
    "@eslint/eslintrc": "^3.1.0",
    "@eslint/js": "^9.12.0",
    "@types/node": "^20.16.12",
    "@typescript-eslint/eslint-plugin": "^8.44.1",
    "@typescript-eslint/parser": "^8.44.1",
    "c8": "^10.1.3",
    "cspell": "^9.2.1",
    "editorconfig-checker": "^6.1.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.2",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsdoc": "^60.2.0",
    "eslint-plugin-jsonc": "^2.20.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-promise": "^7.2.1",
    "eslint-plugin-security": "^3.0.1",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-plugin-sonarjs": "^3.0.5",
    "eslint-plugin-unicorn": "^48.0.1",
    "eslint-plugin-unused-imports": "^4.2.0",
    "eslint-plugin-yaml": "^1.1.2",
    "husky": "^9.0.0",
    "jest": "^30.1.3",
    "jsonc-eslint-parser": "^2.4.1",
    "lint-staged": "^15.0.0",
    "markdownlint-cli": "^0.45.0",
    "prettier": "^3.6.2",
    "semantic-release": "^24.0.0",
    "sort-package-json": "^3.4.0",
    "stylelint": "^14.16.1",
    "stylelint-config-prettier": "^9.0.5",
    "stylelint-config-standard": "^28.0.0",
    "stylelint-prettier": "^3.0.0",
    "ts-jest": "^29.4.4",
    "typescript": "^5.6.3",
    "typescript-json-schema": "^0.65.1",
    "vitest": "^3.2.4",
    "yaml-eslint-parser": "^1.3.0"
  }
}
